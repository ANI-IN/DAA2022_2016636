/*
Problem statement :
Give a sorted array find whether the given key is present in array or not
/*


#include <stdio.h>
#include <stdlib.h>

int binarySearch(int a[], int x, int start, int end) {

  while (start <= end) {
    int mid = start + (end - start) / 2;

    if (a[mid] == x)
      return mid;

    if (a[mid] < x)
      start = mid + 1;

    else
      end = mid - 1;
  }
  return -1;
}


int main()
{
    printf("Enter the array size : ");
    int size;
    scanf("%d",&size);

    int a[size];
    printf("Enter %d elements ",size);

    for(int i=0;i<size;i++)
    {
        scanf("%d",&a[i]);
    }

    int start=0,end=size,key;

    int mid=start + (end-start)/2;

    int flag=0;
    printf("Enter key : ");
    scanf("%d",&key);

    int result = binarySearch(a, key, 0, size - 1);
    
    if (result == -1)
    printf("Not found");
    else
    printf("\nElement is found at index %d", result+1);
    return 0;

}

